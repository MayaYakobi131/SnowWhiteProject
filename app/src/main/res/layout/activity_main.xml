<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/snow_white_background"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top bar: hearts + score -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_heart1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/heart"/>

            <ImageView
                android:id="@+id/main_IMG_heart2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/heart"/>

            <ImageView
                android:id="@+id/main_IMG_heart3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/heart"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/main_LBL_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 0"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/main_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Score: 0"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Road (9x5) -->
    <GridLayout
        android:id="@+id/main_GRID_road"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="9"
        android:columnCount="5"
        android:useDefaultMargins="true"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 0 -->
        <ImageView android:id="@+id/mat_0_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="0" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_0_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="0" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_0_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="0" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_0_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="0" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_0_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="0" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 1 -->
        <ImageView android:id="@+id/mat_1_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="1" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_1_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="1" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_1_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="1" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_1_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="1" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_1_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="1" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 2 -->
        <ImageView android:id="@+id/mat_2_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="2" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_2_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="2" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_2_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="2" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_2_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="2" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_2_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="2" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 3 -->
        <ImageView android:id="@+id/mat_3_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="3" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_3_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="3" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_3_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="3" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_3_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="3" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_3_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="3" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 4 -->
        <ImageView android:id="@+id/mat_4_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="4" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_4_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="4" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_4_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="4" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_4_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="4" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_4_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="4" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 5 -->
        <ImageView android:id="@+id/mat_5_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="5" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_5_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="5" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_5_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="5" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_5_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="5" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_5_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="5" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 6 -->
        <ImageView android:id="@+id/mat_6_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="6" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_6_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="6" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_6_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="6" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_6_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="6" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_6_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="6" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 7 -->
        <ImageView android:id="@+id/mat_7_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="7" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_7_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="7" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_7_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="7" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_7_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="7" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_7_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="7" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

        <!-- Row 8 -->
        <ImageView android:id="@+id/mat_8_0" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="8" android:layout_column="0" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_8_1" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="8" android:layout_column="1" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_8_2" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="8" android:layout_column="2" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_8_3" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="8" android:layout_column="3" android:layout_rowWeight="1" android:layout_columnWeight="1"/>
        <ImageView android:id="@+id/mat_8_4" android:layout_width="0dp" android:layout_height="0dp" android:layout_row="8" android:layout_column="4" android:layout_rowWeight="1" android:layout_columnWeight="1"/>

    </GridLayout>

    <!-- Player -->
    <ImageView
        android:id="@+id/main_IMG_player"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/snow_white"
        app:layout_constraintBottom_toBottomOf="@id/main_GRID_road"
        app:layout_constraintStart_toStartOf="@id/main_GRID_road"
        app:layout_constraintEnd_toEndOf="@id/main_GRID_road"
        android:translationY="-4dp"/>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/main_BTN_left"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#B39DDB"
            android:src="@drawable/arrow_left"
            app:tint="@android:color/white"
            android:contentDescription="@string/move_left"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/main_BTN_right"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#B39DDB"
            android:src="@drawable/arrow_right"
            app:tint="@android:color/white"
            android:contentDescription="@string/move_right"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
